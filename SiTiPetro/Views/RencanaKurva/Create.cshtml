@model SiTiPetro.Models.RencanaKurva
@{
    ViewData["Title"] = "Rencana Kurva";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<section class="content">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Rencana Kurva</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="aplikasiId" name="aplikasiId" />
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Bulan" class="control-label">Bulan</label>
                        <select asp-for="Bulan" class="form-control select2" style="width: 50%;" name="bulan">
                            <option selected="selected" value="1">Januari</option>
                            <option value="2">Februari</option>
                            <option value="3">Maret</option>
                            <option value="4">April</option>
                            <option value="5">Mei</option>
                            <option value="6">Juni</option>
                            <option value="7">Juli</option>
                            <option value="8">Agustus</option>
                            <option value="9">September</option>
                            <option value="10">Oktober</option>
                            <option value="11">November</option>
                            <option value="12">Desember</option>
                        </select>
                        <span asp-validation-for="Bulan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Minggu" class="control-label">Minggu</label>
                        <select asp-for="Minggu" class="form-control select2" style="width: 50%;" name="minggu">
                            <option selected="selected" value="1">Ke-1</option>
                            <option value="2">Ke-2</option>
                            <option value="3">Ke-3</option>
                            <option value="4">Ke-4</option>
                            <option value="5">Ke-5</option>
                        </select>
                        <span asp-validation-for="Minggu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RencanProgres" class="control-label">Rencana Progress</label>
                        <input asp-for="RencanProgres" class="form-control" name="rencanaProgres"/>
                        <span asp-validation-for="RencanProgres" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Presentasi" class="control-label">Presentase</label>
                        <input asp-for="Presentasi" class="form-control" name="presentase"/>
                        <span asp-validation-for="Realisasi" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Tambah Rencana Kurva</button>

                    <div style="float: right">
                        <a asp-action="Detail" asp-route-id="@Model.aplikasiId" class="btn btn-success">Kembali</a>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</section>
