@model SiTiPetro.Models.Aplikasi

@{
    ViewData["Title"] = "Buat Permintaan Aplikasi";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<section class="content">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Permintaan Aplikasi</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="nama" class="control-label">Nama Aplikasi</label>
                        <input asp-for="nama" class="form-control" placeholder="Nama" />
                        <span asp-validation-for="nama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="deskripsi" class="control-label">Deskripsi Aplikasi</label>
                        <textarea asp-for="deskripsi" class="form-control" rows="5" placeholder="Deskripsi"></textarea>
                        <span asp-validation-for="deskripsi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="nomor_surat_dof" class="control-label">Nomor Surat DOF</label>
                        <input asp-for="nomor_surat_dof" class="form-control" placeholder="Nomor Surat" />
                        <span asp-validation-for="nomor_surat_dof" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="direktorat" class="control-label">Direktorat</label>
                        <input asp-for="direktorat" class="form-control" placeholder="Direktorat" />
                        <span asp-validation-for="direktorat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="kompartemen" class="control-label">Kompartemen</label>
                        <input asp-for="kompartemen" class="form-control" placeholder="Kompartemen" />
                        <span asp-validation-for="kompartemen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="departermen" class="control-label">Departemen</label>
                        <input asp-for="departermen" class="form-control" placeholder="Departemen" />
                        <span asp-validation-for="departermen" class="text-danger"></span>
                    </div>
                   
                    <b>Upload File BRD</b>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="file">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="pic_unit_terkait" class="control-label">PIC Terkait</label>
                        <input asp-for="pic_unit_terkait" class="form-control" placeholder="PIC" />
                        <span asp-validation-for="pic_unit_terkait" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="nomer_hp" class="control-label">Nomor HP</label>
                        <input asp-for="nomer_hp" class="form-control" placeholder="Nomor HP" />
                        <span asp-validation-for="nomer_hp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="tahun" class="control-label">Tahun</label>
                        <input asp-for="tahun" class="form-control" placeholder="Tahun" />
                        <span asp-validation-for="tahun" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Jenis Aplikasi</label>
                        <div class="icheck-primary">
                            <input type="radio" id="radioPrimary1" name="jenis_aplikasi" value="1" checked>
                            <label style=" font-weight: normal" for="radioPrimary1">
                                Website
                            </label>
                        </div>
                        <div class="icheck-primary">
                            <input type="radio" id="radioPrimary2" name="jenis_aplikasi" value="2">
                            <label style=" font-weight: normal" for="radioPrimary2">
                                Mobile
                            </label>
                        </div>
                        <div class="icheck-primary">
                            <input type="radio" id="radioPrimary3" name="jenis_aplikasi" value="3">
                            <label style=" font-weight: normal" for="radioPrimary3">
                                Website dan Mobile
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="rencana_anggaran" class="control-label">Rencana Anggaran</label>
                        <input asp-for="rencana_anggaran" class="form-control" placeholder="Rencana Anggaran" />
                        <span asp-validation-for="rencana_anggaran" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-danger">Batal</a>
                
                    <div style="float: right">
                        <button type="submit" class="btn btn-success">Buat Permintaan</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</section>

<script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
</script>
