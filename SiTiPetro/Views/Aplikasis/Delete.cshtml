@model SiTiPetro.Models.Aplikasi

@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<h3>Apakah Anda yakin akan menghapus data ini ?</h3>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Detail Aplikasi</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 order-1 order-md-2">
                    <h3 class="text-primary"><i class="fas fa-laptop"></i> @Html.DisplayFor(model => model.nama)</h3>
                    <p class="text-muted">@Html.DisplayFor(model => model.deskripsi) </p>
                    <br />
                    <div class="text-muted">
                        <p class="text-sm">
                            Nomor Surat
                            <b class="d-block"> @Html.DisplayFor(model => model.nomor_surat_dof)</b>
                        </p>
                        <p class="text-sm">
                            Direktorat
                            <b class="d-block">@Html.DisplayFor(model => model.direktorat)</b>
                        </p>
                        <p class="text-sm">
                            Kompartemen
                            <b class="d-block">@Html.DisplayFor(model => model.kompartemen)</b>
                        </p>
                        <p class="text-sm">
                            Departemen
                            <b class="d-block">@Html.DisplayFor(model => model.departermen)</b>
                        </p>
                        <p class="text-sm">
                            PIC
                            <b class="d-block">@Html.DisplayFor(model => model.pic_unit_terkait)</b>
                        </p>
                        <p class="text-sm">
                            Nomor HP
                            <b class="d-block">@Html.DisplayFor(model => model.nomer_hp)</b>
                        </p>
                        <p class="text-sm">
                            Tahun
                            <b class="d-block">@Html.DisplayFor(model => model.tahun)</b>
                        </p>
                        <p class="text-sm">
                            Jenis Aplikasi
                            <b class="d-block">@Html.DisplayFor(model => model.jenis_aplikasi)</b>
                        </p>
                        <p class="text-sm">
                            Rencana Anggaran
                            <b class="d-block">@Html.DisplayFor(model => model.rencana_anggaran)</b>
                        </p>
                    </div>

                    <h5 class="mt-5 text-muted">Project files</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-word"></i> Functional-requirements.docx</a>
                        </li>
                        <li>
                            <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-pdf"></i> UAT.pdf</a>
                        </li>
                        <li>
                            <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-envelope"></i> Email-from-flatbal.mln</a>
                        </li>
                        <li>
                            <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-image "></i> Logo.png</a>
                        </li>
                        <li>
                            <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-word"></i> Contract-10_12_2014.docx</a>
                        </li>
                    </ul>
                    <div class="text-center mt-5 mb-3">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-success">Kembali</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>