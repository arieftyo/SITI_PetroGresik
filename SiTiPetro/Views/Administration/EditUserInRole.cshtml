@model List<SiTiPetro.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    ViewData["Title"] = "Edit User in Role";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<section class="content">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add or Remove Users from this Role</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post">
               
                <div class="card-body">
                   @for (int i = 0; i < Model.Count; i++)
                   {
                       <div class="form-check m-1">
                           <input type="hidden" asp-for="@Model[i].UserId" />
                           <input type="hidden" asp-for="@Model[i].UserName" />
                           <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].UserName
                            </label>
                       </div>
                   }

                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                        <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</section>
