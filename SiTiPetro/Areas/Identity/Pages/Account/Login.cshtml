@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";

}

<div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
    <form class="login100-form validate-form" id="account" method="post">
        <span class="login100-form-title p-b-37">
            Sign In
        </span>

        <div class="wrap-input100 validate-input m-b-20" data-validate="Enter NIK">
            <input asp-for="Input.NIK" class="input100" placeholder="NIK" />
            <span asp-validation-for="Input.NIK" class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
            <input asp-for="Input.Password" class="input100" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="focus-input100"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>

        <div class="container-login100-form-btn">
            <button class="login100-form-btn">
                Sign In
            </button>
        </div>

        <div class="text-center p-t-57 p-b-20">
            <span class="txt1">
                Or login with
            </span>
        </div>

        <div class="flex-c p-b-112">
            <a href="#" class="login100-social-item">
                <i class="fa fa-facebook-f"></i>
            </a>

            <a href="#" class="login100-social-item">
                <img src="~/auth/images/icons/icon-google.png" alt="GOOGLE">
            </a>
        </div>

        <div class="text-center">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt2 hov1">
                Sign Up
            </a>
        </div>
    </form>
</div>